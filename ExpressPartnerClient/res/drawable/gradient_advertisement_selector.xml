<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
	    <shape>
		    <solid android:color="@color/main_gradient_four_pressed" />	<!-- 填充颜色 -->
		    <stroke android:width="1dp" android:color="#ffffff" />	<!-- 描边 -->
		</shape>
	</item>
	<item >
	    <shape>
		    <solid android:color="@color/main_gradient_four_normal" />	<!-- 填充颜色 -->
		    <stroke android:width="1dp" android:color="#ffffff" />	<!-- 描边 -->
		</shape>
	</item>
</selector>